<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="action_student_management" model="ir.actions.act_window">
        <field name="name">Students</field>
        <field name="res_model">student.management</field>
        <field name="view_mode">tree,form</field>
    </record>
    <menuitem id="menu_student_root"
              name="Student Management"
              sequence="10"/>
    <menuitem id="menu_student_items"
              name="Students"
              parent="menu_student_root"
              action="action_student_management"
              sequence="1"/>
    <record id="view_student_tree" model="ir.ui.view">
        <field name="name">student.management.tree</field>
        <field name="model">student.management</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="age"/>
                <field name="email"/>
                <field name="is_active"/>
            </tree>
        </field>
    </record>
    <record id="view_student_form" model="ir.ui.view">
        <field name="name">student.management.form</field>
        <field name="model">student.management</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="age"/>
                        <field name="email"/>
                        <field name="is_active"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>