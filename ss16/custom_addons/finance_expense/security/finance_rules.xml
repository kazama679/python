<odoo>
    <!-- Employee: chỉ thấy của mình -->
    <record id="rule_finance_employee_own" model="ir.rule">
        <field name="name">Employee only own expenses</field>
        <field name="model_id" ref="model_finance_expense"/>
        <field name="groups" eval="[(4, ref('finance_expense.group_finance_employee'))]"/>
        <field name="domain_force">[('create_uid', '=', user.id)]</field>
    </record>

    <!-- Manager + Auditor: thấy tất -->
    <record id="rule_finance_manager_all" model="ir.rule">
        <field name="name">Manager &amp; Auditor see all</field>
        <field name="model_id" ref="model_finance_expense"/>
        <field name="groups" eval="[
            (4, ref('finance_expense.group_finance_manager')),
            (4, ref('finance_expense.group_finance_auditor'))
        ]"/>
        <field name="domain_force">[(1,'=',1)]</field>
    </record>
</odoo>