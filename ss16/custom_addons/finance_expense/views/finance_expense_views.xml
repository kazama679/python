<odoo>
    <record id="view_finance_expense_tree" model="ir.ui.view">
        <field name="name">finance.expense.tree</field>
        <field name="model">finance.expense</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="expense_type"/>
                <field name="amount"/>
                <field name="expense_date"/>
                <field name="is_paid"/>
            </tree>
        </field>
    </record>

    <record id="view_finance_expense_form" model="ir.ui.view">
        <field name="name">finance.expense.form</field>
        <field name="model">finance.expense</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="expense_type"/>
                        <field name="amount"/>
                        <field name="expense_date"/>
                        <field name="is_paid"/>
                        <field name="approval_note"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>