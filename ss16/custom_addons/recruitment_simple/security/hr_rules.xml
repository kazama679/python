<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Record Rule cho Recruiter: Chỉ thấy ứng viên do mình tạo -->
        <record id="hr_candidate_rule_recruiter" model="ir.rule">
            <field name="name">HR Candidate: Recruiter chỉ thấy ứng viên do mình tạo</field>
            <field name="model_id" ref="model_hr_candidate"/>
            <field name="domain_force">[('create_uid', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_hr_recruiter'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- Record Rule cho Manager: Thấy tất cả -->
        <record id="hr_candidate_rule_manager" model="ir.rule">
            <field name="name">HR Candidate: Manager thấy tất cả</field>
            <field name="model_id" ref="model_hr_candidate"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_hr_manager'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <!-- Record Rule cho Customer: Thấy tất cả nhưng chỉ đọc -->
        <record id="hr_candidate_rule_customer" model="ir.rule">
            <field name="name">HR Candidate: Customer thấy tất cả (chỉ đọc)</field>
            <field name="model_id" ref="model_hr_candidate"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_hr_customer'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>
    </data>
</odoo>