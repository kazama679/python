<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- ==================== ACTION: MỞ DANH SÁCH SÁCH ==================== -->
        <record id="action_library_book" model="ir.actions.act_window">
            <field name="name">Quản lý Sách</field>
            <field name="res_model">library.book</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Tạo đầu sách mới
                </p>
                <p>
                    Click vào nút "Tạo" để thêm sách vào thư viện.
                </p>
            </field>
        </record>

        <!-- ==================== MENU ROOT ==================== -->
        <menuitem id="menu_library_root" name="Thư viện" sequence="10"/>

        <!-- ==================== MENU CON: QUẢN LÝ SÁCH ==================== -->
        <menuitem id="menu_library_management" name="Quản lý Sách" parent="menu_library_root" sequence="10"/>

        <!-- ==================== MENU ITEM: TẤT CẢ ĐẦU SÁCH ==================== -->
        <menuitem id="menu_library_all_books" name="Tất cả đầu sách" parent="menu_library_management" action="action_library_book" sequence="10"/>
    </data>
</odoo>
